<div class="containterGraph">
  <div class="row">
    <div class="xs-sm-12">
      <canvas id="myChart" ></canvas>
      <script>
      var ctx = document.getElementById("myChart").getContext("2d");
      // ctx.canvas.width = 100;
      // ctx.canvas.height = 150;
      var myChart = new Chart(ctx, {
          type: 'horizontalBar',
          data: {
              labels: ["Allotted Miles", "Forecasted Miles from Routes", "Current Odometer Reading"],
              datasets: [{
                  label: '# of Miles',
                  data: [`<%=car.allotMileageTillNow%>`, `<%=(foreCastedTotal*car.weeksPassed)%>`,`<%=car.currentOdom%>`],
                  backgroundColor: [
                      'rgba(63, 98, 109, .5)',
                      'rgba(175, 87, 173, 0.5)',
                      'rgba(183, 132, 100, 0.5)',
                              ],
                  borderColor: [
                      'rgba(63, 98, 109, 1)',
                      'rgba(175, 87, 173, 1)',
                      'rgba(183, 132, 100, 1)',

                  ],
                  borderWidth: 1
              }]
          },
          options: {
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero:true
                      }
                  }]
              }
          }
      });
      </script>
    </div>
  </div>
</div>

