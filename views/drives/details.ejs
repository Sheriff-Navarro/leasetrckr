                'rgba(224, 33, 129, 1)',
                'rgba(21, 216, 213, .1)',
                'rgba(234, 126, 25, 1)',
                'rgba(114, 219, 28, 1)'
            ],
            data: driveDistances,
        }]
    },

    // Configuration options go here
    options: {}
    });

