      const data = <%- JSON.stringify(data) %>;

      console.log('first drive',data);

      const driveNames = [];
      const driveDistances = [];
      data.allDrives.forEach(function(drive){
        // push all drive names into array
        driveNames.push(drive.driveName)
        driveDistances.push(drive.distance);
      })
      console.log(driveNames, driveDistances);
      var ctx = document.getElementById('myChart').getContext('2d');
      var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'pie',

