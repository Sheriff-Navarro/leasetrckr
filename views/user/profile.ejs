

<a class="btn btn-primary" href="/cars/new">Create a Car</a> <a class="btn btn-primary" href="/drives/new">Create a Drive</a>
<% car.forEach((car) => { %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12" >
        <div class="col-xs-2">
        </div>
        <div class="col-xs-8"id="profileCar">
          <h2><%=car.carName%></h2>
          <p>Allotted Miles</p> <p><%=car.allotMileageTillNow%></p>
          <p>Odometer Reading</p> <p><%=car.currentOdom%></p>
          <br>
          <a class="btn btn-info" href="/cars/<%= car._id %>" role="button">View Car</a>
          <br>
        </div>
        <div class="col-xs-2">
        </div>
      </div>

    </div>

  </div>
  <%  }) %>
<% drive.forEach((drive) => { %>
<div class="container" >
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-3">
      </div>
      <div class="col-xs-4"id="drives">
        <h2><%=drive.driveName%></h2>
        <p>Drive Distance: <%=drive.distance%> miles</p>
        <p>Times Taken Weekly: <%=drive.amountTaken%></p>
      </div>
      <div class="col-xs-3">
      </div>
    </div>

  </div>

</div>

<%  }) %>
